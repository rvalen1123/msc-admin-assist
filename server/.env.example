# Application
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Azure SQL Database
AZURE_SQL_HOST=your-server.database.windows.net
AZURE_SQL_PORT=1433
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password
AZURE_SQL_DATABASE=msc_wound_care
AZURE_SQL_CONNECTION_STRING="sqlserver://${AZURE_SQL_HOST}:${AZURE_SQL_PORT};database=${AZURE_SQL_DATABASE};user=${AZURE_SQL_USERNAME};password=${AZURE_SQL_PASSWORD};encrypt=true;trustServerCertificate=false;"

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=24h

# Redis
REDIS_URL=redis://localhost:6379

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=your-container-name

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Cache Settings
CACHE_TTL=3600
CACHE_MUTATION_TTL=300

# DocuSeal
DOCUSEAL_API_KEY=your-docuseal-api-key
DOCUSEAL_API_URL=https://api.docuseal.co/v1 